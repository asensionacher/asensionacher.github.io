---
import showsTexture from "../assets/shows-texture.svg";
const shows = [
    {
        date: "November 15, 2025",
        venue: "Makina Origins",
        city: "Barcelona",
        tickets:
            "https://ticketandroll.com/evento/makina-origins-atlantic-bcn-carrer-del-plom-1-sants-montjuic-08038-barcelona?fbclid=PAdGRleANe7gtleHRuA2FlbQIxMQABp3f2dgUZV_e-mVZXPegjiWu145cQA193tJ-eNYi9C4HOUWf1cj1rJqZNkZlW_aem_28lDxe8zIqheVHa_jZkPzw",
    },
    // {
    //     date: "November 5, 2025",
    //     venue: "Music Hall",
    //     city: "Barcelona",
    //     tickets: "https://tickets.example.com/show2",
    // },
    // {
    //     date: "November 15, 2025",
    //     venue: "Jazz Club",
    //     city: "Valencia",
    //     tickets: "https://tickets.example.com/show3",
    // },
];
---

<section class="shows-section" id="shows">
    <img class="texture-overlay" src={showsTexture.src} alt="" />

    <div class="content-wrapper">
        <h2>Upcoming Shows</h2>
        <p class="subtitle">Join us for an unforgettable experience</p>

        <div class="shows-grid">
            {
                shows.map((show, index) => (
                    <div
                        class="show-card"
                        style={`animation-delay: ${index * 0.1}s`}
                    >
                        <div class="show-date">
                            <span class="date-day">
                                {show.date.split(" ")[1].replace(",", "")}
                            </span>
                            <span class="date-month">
                                {show.date.split(" ")[0].substring(0, 3)}
                            </span>
                            <span class="date-year">
                                {show.date.split(" ")[2]}
                            </span>
                        </div>
                        <div class="show-details">
                            <h3 class="venue-name">{show.venue}</h3>
                            <p class="city-name">
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="16"
                                    height="16"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                >
                                    <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z" />
                                    <circle cx="12" cy="10" r="3" />
                                </svg>
                                {show.city}
                            </p>
                        </div>
                        <a
                            href={show.tickets}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="ticket-button"
                        >
                            <span>Get Tickets</span>
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="18"
                                height="18"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                            >
                                <line x1="5" y1="12" x2="19" y2="12" />
                                <polyline points="12 5 19 12 12 19" />
                            </svg>
                        </a>
                    </div>
                ))
            }
        </div>
    </div>

    <!-- Back to Home Indicator -->
    <div class="scroll-indicator-top">
        <a href="/" class="scroll-link-top">
            <div class="scroll-arrow-up"></div>
            <span class="scroll-text">Back to Home</span>
        </a>
    </div>
</section>

<!-- Structured Data for Events -->
<script
    type="application/ld+json"
    set:html={JSON.stringify(
        shows.map((show) => ({
            "@context": "https://schema.org",
            "@type": "MusicEvent",
            name: `Cía Díaz Live at ${show.venue}`,
            startDate: new Date(show.date).toISOString(),
            location: {
                "@type": "Place",
                name: show.venue,
                address: {
                    "@type": "PostalAddress",
                    addressLocality: show.city,
                    addressCountry: "Spain",
                },
            },
            performer: {
                "@type": "MusicGroup",
                name: "Cía Díaz",
            },
            offers: {
                "@type": "Offer",
                url: show.tickets,
                availability: "https://schema.org/InStock",
            },
        })),
    )}
/>

<style>
    .shows-section {
        min-height: 100vh;
        background-color: black;
        color: white;
        padding: 4rem 2rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        scroll-snap-align: start;
        scroll-snap-stop: always;
        box-sizing: border-box;
        position: relative;
    }

    .texture-overlay {
        position: absolute;
        width: 100%;
        height: 100%;
        object-fit: cover;
        opacity: 1;
        z-index: 1;
        top: 0;
        left: 0;
        pointer-events: none;
    }

    .content-wrapper {
        position: relative;
        z-index: 2;
        width: 100%;
        max-width: 1200px;
        text-align: center;
    }

    h2 {
        font-family: "Playfair Display", serif;
        font-size: 3.5rem;
        margin-bottom: 1rem;
        font-style: italic;
        background: linear-gradient(135deg, #ffffff 0%, #a0a0a0 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .subtitle {
        font-size: 1.2rem;
        color: rgba(255, 255, 255, 0.7);
        margin-bottom: 3rem;
        font-weight: 300;
        letter-spacing: 0.05em;
    }

    .shows-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
        gap: 2rem;
        margin-top: 2rem;
    }

    .show-card {
        background: linear-gradient(
            135deg,
            rgba(50, 69, 255, 0.1) 0%,
            rgba(188, 82, 238, 0.1) 100%
        );
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 16px;
        padding: 2rem;
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        transition: all 0.3s ease;
        backdrop-filter: blur(10px);
        opacity: 0;
        animation: fadeInUp 0.6s ease forwards;
        position: relative;
        overflow: hidden;
    }

    .show-card::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(
            135deg,
            rgba(50, 69, 255, 0.2) 0%,
            rgba(188, 82, 238, 0.2) 100%
        );
        opacity: 0;
        transition: opacity 0.3s ease;
        border-radius: 16px;
    }

    .show-card:hover::before {
        opacity: 1;
    }

    .show-card:hover {
        transform: translateY(-8px);
        border-color: rgba(255, 255, 255, 0.3);
        box-shadow: 0 20px 40px rgba(50, 69, 255, 0.3);
    }

    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .show-date {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.25rem;
        padding: 1.5rem;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 12px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        min-width: 100px;
        align-self: center;
        position: relative;
        z-index: 1;
    }

    .date-day {
        font-size: 2.5rem;
        font-weight: bold;
        line-height: 1;
        background: linear-gradient(83.21deg, #3245ff 0%, #bc52ee 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .date-month {
        font-size: 1rem;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        font-weight: 600;
        color: rgba(255, 255, 255, 0.8);
    }

    .date-year {
        font-size: 0.9rem;
        color: rgba(255, 255, 255, 0.5);
        font-weight: 300;
    }

    .show-details {
        flex: 1;
        text-align: center;
        position: relative;
        z-index: 1;
    }

    .venue-name {
        font-family: "Playfair Display", serif;
        font-size: 1.5rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
        color: white;
    }

    .city-name {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        font-size: 1.1rem;
        color: rgba(255, 255, 255, 0.7);
        margin: 0;
    }

    .city-name svg {
        opacity: 0.7;
    }

    .ticket-button {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        padding: 1rem 2rem;
        background: linear-gradient(83.21deg, #3245ff 0%, #bc52ee 100%);
        color: white;
        text-decoration: none;
        border-radius: 50px;
        font-weight: 600;
        font-size: 1rem;
        letter-spacing: 0.05em;
        transition: all 0.3s ease;
        position: relative;
        z-index: 1;
        overflow: hidden;
    }

    .ticket-button::before {
        content: "";
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(83.21deg, #bc52ee 0%, #3245ff 100%);
        transition: left 0.3s ease;
        z-index: -1;
    }

    .ticket-button:hover::before {
        left: 0;
    }

    .ticket-button:hover {
        transform: scale(1.05);
        box-shadow: 0 8px 20px rgba(50, 69, 255, 0.4);
    }

    .ticket-button svg {
        transition: transform 0.3s ease;
    }

    .ticket-button:hover svg {
        transform: translateX(4px);
    }

    .scroll-indicator-top {
        position: absolute;
        top: 2rem;
        left: 50%;
        transform: translateX(-50%);
        text-align: center;
        z-index: 10;
    }

    .scroll-link-top {
        color: white;
        text-decoration: none;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.5rem;
        opacity: 0;
        animation: fadeIn 1s ease-out 1s forwards;
    }

    .scroll-text {
        font-family: "Playfair Display", serif;
        font-size: 1rem;
        letter-spacing: 0.1em;
    }

    .scroll-arrow-up {
        width: 20px;
        height: 20px;
        border-right: 2px solid white;
        border-bottom: 2px solid white;
        transform: rotate(225deg);
        animation: bounceUp 2s infinite;
    }

    @keyframes bounceUp {
        0%,
        20%,
        50%,
        80%,
        100% {
            transform: translateY(0) rotate(225deg);
        }
        40% {
            transform: translateY(10px) rotate(225deg);
        }
        60% {
            transform: translateY(5px) rotate(225deg);
        }
    }

    @media (max-width: 768px) {
        .shows-section {
            padding: 3rem 1rem;
        }

        .scroll-indicator-top {
            top: 1rem;
        }

        .scroll-text {
            font-size: 0.9rem;
        }

        h2 {
            font-size: 2.5rem;
            margin-bottom: 0.5rem;
        }

        .subtitle {
            font-size: 1rem;
            margin-bottom: 2rem;
        }

        .shows-grid {
            grid-template-columns: 1fr;
            gap: 1.5rem;
        }

        .show-card {
            padding: 1.5rem;
        }

        .date-day {
            font-size: 2rem;
        }

        .venue-name {
            font-size: 1.3rem;
        }

        .city-name {
            font-size: 1rem;
        }

        .ticket-button {
            padding: 0.875rem 1.5rem;
            font-size: 0.95rem;
        }
    }

    @media (max-width: 480px) {
        h2 {
            font-size: 2rem;
        }

        .subtitle {
            font-size: 0.9rem;
        }

        .show-card {
            padding: 1.25rem;
        }
    }
</style>
