---
import introVideo from "../assets/intro.mp4";
import youtubeIcon from "../assets/youtube.webp";
import spotifyIcon from "../assets/spotify.webp";
import instagramIcon from "../assets/instagram.webp";
import soundcloudIcon from "../assets/soundcloud.webp";
import tikTokIcon from "../assets/tiktok.webp";
import showsTexture from "../assets/shows-texture.svg";
---

<main class="main-container">
    <div class="container">
        <div class="video-half">
            <video autoplay loop muted playsinline>
                <source src={introVideo} type="video/mp4" />
            </video>
        </div>
        <div class="text-half">
            <img class="texture-overlay" src={showsTexture.src} alt="" />
            <div class="text-container">
                <h1 class="fancy-text">Cía Díaz</h1>
                <h2 class="fancy-text subtitle">Spanish Singer & Artist</h2>
                <!-- <p class="artist-description">
                    Experience live performances and discover original music
                    from one of Spain's emerging talents.
                </p> -->
                <!-- <div class="spotify-embed">
                    <iframe data-testid="embed-iframe" style="border-radius:12px" src="https://open.spotify.com/embed/track/44aWiK6EMuu6rrNdUK3xEf?utm_source=generator&theme=0" width="100%" height="352" frameBorder="0" allowfullscreen="" allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture" loading="lazy"></iframe>
                </div> -->
                <div class="social-buttons">
                    <a
                        href="https://www.youtube.com/@patriciadiaz8943"
                        class="social-button"
                        target="_blank"
                        rel="noopener noreferrer"
                    >
                        <img src={youtubeIcon.src} alt="YouTube" />
                    </a>
                    <a
                        href="https://open.spotify.com/artist/0uUpImhCPw1wXuTgmNOUST"
                        class="social-button"
                        target="_blank"
                        rel="noopener noreferrer"
                    >
                        <img src={spotifyIcon.src} alt="Spotify" />
                    </a>
                    <a
                        href="https://www.instagram.com/cia_diaz_"
                        class="social-button"
                        target="_blank"
                        rel="noopener noreferrer"
                    >
                        <img src={instagramIcon.src} alt="Instagram" />
                    </a>
                    <a
                        href="https://www.tiktok.com/@cia.diaz"
                        class="social-button"
                        target="_blank"
                        rel="noopener noreferrer"
                    >
                        <img src={tikTokIcon.src} alt="TikTok" />
                    </a>
                    <a
                        href="https://soundcloud.com/ciadiaz"
                        class="social-button"
                        target="_blank"
                        rel="noopener noreferrer"
                    >
                        <img src={soundcloudIcon.src} alt="SoundCloud" />
                    </a>
                </div>
            </div>
            <div class="scroll-indicator">
                <div class="scroll-link">
                    <span class="scroll-text">Upcoming Shows</span>
                    <div class="scroll-arrow"></div>
                </div>
            </div>
        </div>
    </div>
</main>

<style>
    .main-container {
        height: 100vh;
        display: flex;
        position: relative;
        scroll-snap-align: start;
    }

    .container {
        width: 100%;
        height: 100vh;
        display: flex;
        position: relative;
    }

    .video-half {
        width: 50%;
        height: 100%;
        position: relative;
        overflow: hidden;
        background: #000;
    }

    .video-half video {
        width: 100%;
        height: 100%;
        object-fit: cover;
        opacity: 0.8;
    }

    .text-half {
        width: 50%;
        height: 100%;
        background-color: black;
        display: flex;
        justify-content: center;
        align-items: center;
        position: relative;
        overflow: hidden;
    }

    .texture-overlay {
        position: absolute;
        width: 100%;
        height: 100%;
        object-fit: cover;
        opacity: 1;
        z-index: 1;
        pointer-events: none;
    }

    .text-container {
        text-align: center;
        position: relative;
        z-index: 2;
    }

    .fancy-text {
        color: white;
        margin: 0;
        opacity: 0;
        transform: translateY(20px);
        animation: fadeInUp 1s ease-out forwards;
        font-family: "Playfair Display", serif;
        letter-spacing: 0.02em;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
    }

    h1.fancy-text {
        font-size: 4.5rem;
        font-weight: bold;
        margin-bottom: 0.5rem;
        font-style: italic;
    }

    h2.fancy-text.subtitle {
        font-size: 2.2rem;
        font-weight: normal;
        animation-delay: 0.3s;
        letter-spacing: 0.04em;
        margin-bottom: 2rem;
    }

    .artist-description {
        color: rgba(255, 255, 255, 0.8);
        font-size: 1.1rem;
        line-height: 1.6;
        max-width: 500px;
        margin: 1.5rem auto 0;
        opacity: 0;
        animation: fadeIn 1s ease-out 0.5s forwards;
    }

    .spotify-embed {
        margin: 2rem auto;
        width: 90%;
        max-width: 400px;
        opacity: 0;
        animation: fadeIn 1s ease-out 0.6s forwards;
        position: relative;
        z-index: 2;
    }

    .social-buttons {
        display: flex;
        justify-content: center;
        gap: 2.5rem;
        margin-top: 0;
        opacity: 0;
        animation: fadeIn 1s ease-out 0.6s forwards;
    }

    .social-button {
        transition: transform 0.2s ease;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 50%;
        padding: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .social-button:hover {
        transform: scale(1.1);
        background: rgba(255, 255, 255, 0.2);
    }

    .social-button img {
        width: 32px;
        height: 32px;
    }

    .scroll-indicator {
        position: absolute;
        bottom: 2rem;
        left: 50%;
        transform: translateX(-50%);
        text-align: center;
        z-index: 2;
    }

    .scroll-link {
        color: white;
        text-decoration: none;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.5rem;
        opacity: 0;
        animation: fadeIn 1s ease-out 1.5s forwards;
        cursor: pointer;
    }

    .scroll-text {
        font-family: "Playfair Display", serif;
        font-size: 1rem;
        letter-spacing: 0.1em;
    }

    .scroll-arrow {
        width: 20px;
        height: 20px;
        border-right: 2px solid white;
        border-bottom: 2px solid white;
        transform: rotate(45deg);
        animation: bounce 2s infinite;
    }

    @keyframes bounce {
        0%,
        20%,
        50%,
        80%,
        100% {
            transform: translateY(0) rotate(45deg);
        }
        40% {
            transform: translateY(-10px) rotate(45deg);
        }
        60% {
            transform: translateY(-5px) rotate(45deg);
        }
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;
        }
    }

    @keyframes fadeInUp {
        0% {
            opacity: 0;
            transform: translateY(20px);
        }
        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @media (max-width: 768px) {
        .container {
            flex-direction: column;
        }

        .video-half,
        .text-half {
            width: 100%;
            height: 50vh;
        }

        h1.fancy-text {
            font-size: 3rem;
        }

        h2.fancy-text.subtitle {
            font-size: 1.8rem;
        }

        .artist-description {
            font-size: 1rem;
            padding: 0 1rem;
        }

        .social-buttons {
            gap: 2rem;
            margin-top: 0;
        }

        .social-button {
            padding: 8px;
        }

        .social-button img {
            width: 28px;
            height: 28px;
        }

        .scroll-indicator {
            bottom: 1rem;
        }
    }
</style>
