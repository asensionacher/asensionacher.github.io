---
import introVideo from '../assets/intro.mp4';
import youtubeIcon from '../assets/youtube.png';
import spotifyIcon from '../assets/spotify.png';
import instagramIcon from '../assets/instagram.png';
import Shows from './Shows.astro';
import background from '../assets/background.svg';
---

<main class="main-container">
    <div class="container">
        <div class="video-half">
            <video autoplay loop muted playsinline>
                <source src={introVideo} type="video/mp4" />
            </video>
        </div>
        <div class="text-half">
            <img class="background-svg" src={background.src} alt="" />
            <div class="text-container">
                <h1 class="fancy-text">Cía Díaz</h1>
                <h2 class="fancy-text subtitle">Singer artist</h2>
                <div class="spotify-embed">
					<!-- <iframe data-testid="embed-iframe" style="border-radius:12px" src="https://open.spotify.com/embed/track/44aWiK6EMuu6rrNdUK3xEf?utm_source=generator&theme=0" width="100%" height="352" frameBorder="0" allowfullscreen="" allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture" loading="lazy"></iframe> -->
                </div>
                <div class="social-buttons">
                    <a href="https://www.youtube.com/@patriciadiaz8943" class="social-button" target="_blank" rel="noopener noreferrer">
                        <img src={youtubeIcon.src} alt="YouTube" />
                    </a>
                    <a href="https://open.spotify.com/artist/0uUpImhCPw1wXuTgmNOUST" class="social-button" target="_blank" rel="noopener noreferrer">
                        <img src={spotifyIcon.src} alt="Spotify" />
                    </a>
                    <a href="https://www.instagram.com/cia_diaz_" class="social-button" target="_blank" rel="noopener noreferrer">
                        <img src={instagramIcon.src} alt="Instagram" />
                    </a>
                </div>
            </div>
            <div class="scroll-indicator">
                <a href="#shows" class="scroll-link">
                    <span class="scroll-text">Upcoming Shows</span>
                    <div class="scroll-arrow"></div>
                </a>
            </div>
        </div>
    </div>
    <Shows />
</main>

<style>
    .main-container {
        height: 100vh;
        overflow-y: auto;
        scroll-behavior: smooth;
        scroll-snap-type: y mandatory;
        position: relative;
        -webkit-overflow-scrolling: touch;
    }

    .container {
        width: 100%;
        height: 100vh;
        display: flex;
        position: relative;
        scroll-snap-align: start;
    }

    .video-half {
        width: 50%;
        height: 100%;
        position: relative;
        overflow: hidden;
        background: #000;
    }

    .video-half video {
        width: 100%;
        height: 100%;
        object-fit: cover;
        opacity: 0.8;
    }

    .text-half {
        width: 50%;
        height: 100%;
        background-color: black;
        display: flex;
        justify-content: center;
        align-items: center;
        position: relative;
        overflow: hidden;
    }

    .background-svg {
        position: absolute;
        width: 100%;
        height: 100%;
        object-fit: cover;
        opacity: 0.3;
        z-index: 1;
    }

    .text-container {
        text-align: center;
        position: relative;
        z-index: 2;
    }

    .fancy-text {
        color: white;
        margin: 0;
        opacity: 0;
        transform: translateY(20px);
        animation: fadeInUp 1s ease-out forwards;
        font-family: "Playfair Display", serif;
        letter-spacing: 0.02em;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
    }

    h1.fancy-text {
        font-size: 4.5rem;
        font-weight: bold;
        margin-bottom: 1rem;
        font-style: italic;
    }

    h2.fancy-text.subtitle {
        font-size: 2.2rem;
        font-weight: normal;
        animation-delay: 0.3s;
        letter-spacing: 0.04em;
    }

    .spotify-embed {
        margin: 2rem auto;
        width: 90%;
        max-width: 400px;
        opacity: 0;
        animation: fadeIn 1s ease-out 0.6s forwards;
        position: relative;
        z-index: 2;
    }

    .social-buttons {
        display: flex;
        justify-content: center;
        gap: 2.5rem;
        margin-top: 2rem;
    }

    .social-button {
        transition: transform 0.2s ease;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 50%;
        padding: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .social-button:hover {
        transform: scale(1.1);
        background: rgba(255, 255, 255, 0.2);
    }

    .social-button img {
        width: 32px;
        height: 32px;
    }

    .scroll-indicator {
        position: absolute;
        bottom: 2rem;
        left: 50%;
        transform: translateX(-50%);
        text-align: center;
        z-index: 2;
    }

    .scroll-link {
        color: white;
        text-decoration: none;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.5rem;
        opacity: 0;
        animation: fadeIn 1s ease-out 1.5s forwards;
    }

    .scroll-text {
        font-family: "Playfair Display", serif;
        font-size: 1rem;
        letter-spacing: 0.1em;
    }

    .scroll-arrow {
        width: 20px;
        height: 20px;
        border-right: 2px solid white;
        border-bottom: 2px solid white;
        transform: rotate(45deg);
        animation: bounce 2s infinite;
    }

    @keyframes bounce {
        0%, 20%, 50%, 80%, 100% {
            transform: translateY(0) rotate(45deg);
        }
        40% {
            transform: translateY(-10px) rotate(45deg);
        }
        60% {
            transform: translateY(-5px) rotate(45deg);
        }
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;
        }
    }

    @keyframes fadeInUp {
        0% {
            opacity: 0;
            transform: translateY(20px);
        }
        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @media (max-width: 768px) {
        .container {
            flex-direction: column;
        }

        .video-half,
        .text-half {
            width: 100%;
            height: 50vh;
        }

        h1.fancy-text {
            font-size: 3rem;
        }

        h2.fancy-text.subtitle {
            font-size: 1.8rem;
        }

        .social-buttons {
            gap: 2rem;
            margin-top: 2.5rem;
        }

        .social-button {
            padding: 8px;
        }

        .social-button img {
            width: 28px;
            height: 28px;
        }

        .scroll-indicator {
            bottom: 1rem;
        }
    }

    .shows-section {
        scroll-snap-align: start;
    }
</style>

<script is:inline>
    document.addEventListener('DOMContentLoaded', () => {
        const mainContainer = document.querySelector('.main-container');
        if (!mainContainer) return;

        let lastScrollTime = 0;
        const scrollCooldown = 1000; // ms between scroll events

        function smoothScroll(target) {
            target.scrollIntoView({
                behavior: 'smooth',
                block: 'start'
            });
        }

        mainContainer.addEventListener('wheel', (e) => {
            const now = Date.now();
            if (now - lastScrollTime < scrollCooldown) {
                e.preventDefault();
                return;
            }

            const sections = [...document.querySelectorAll('.container, .shows-section')];
            const currentSection = sections.findIndex(section => {
                const rect = section.getBoundingClientRect();
                return rect.top >= 0 && rect.top <= window.innerHeight / 2;
            });

            if (currentSection === -1) return;

            const direction = e.deltaY > 0 ? 1 : -1;
            const targetIndex = Math.max(0, Math.min(currentSection + direction, sections.length - 1));
            
            if (targetIndex !== currentSection) {
                e.preventDefault();
                smoothScroll(sections[targetIndex]);
                lastScrollTime = now;
            }
        }, { passive: false });

        // Handle touch events for mobile
        let touchStartY = 0;
        mainContainer.addEventListener('touchstart', (e) => {
            touchStartY = e.touches[0].clientY;
        }, { passive: true });

        mainContainer.addEventListener('touchmove', (e) => {
            const now = Date.now();
            if (now - lastScrollTime < scrollCooldown) {
                return;
            }

            const touchEndY = e.touches[0].clientY;
            const delta = touchStartY - touchEndY;
            
            if (Math.abs(delta) > 50) { // Minimum swipe distance
                const sections = [...document.querySelectorAll('.container, .shows-section')];
                const currentSection = sections.findIndex(section => {
                    const rect = section.getBoundingClientRect();
                    return rect.top >= -50 && rect.top <= 50;
                });

                if (currentSection === -1) return;

                const direction = delta > 0 ? 1 : -1;
                const targetIndex = Math.max(0, Math.min(currentSection + direction, sections.length - 1));
                
                if (targetIndex !== currentSection) {
                    smoothScroll(sections[targetIndex]);
                    lastScrollTime = now;
                }
            }
        }, { passive: true });
    });
</script>
