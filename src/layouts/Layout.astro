---
interface Props {
	title?: string;
	description?: string;
	image?: string;
	canonicalURL?: string;
}

const {
	title = "Cía Díaz - Spanish Singer & Artist | Live Shows & Music",
	description = "Cía Díaz is a talented Spanish singer and artist. Discover her music on Spotify, watch performances on YouTube, and check upcoming live shows in Madrid, Barcelona, and Valencia.",
	image = "/og-image.jpg",
	canonicalURL = new URL(Astro.url.pathname, Astro.site).href,
} = Astro.props;

const siteURL = Astro.site || "https://ciadiazsinger.com";
const fullImageURL = new URL(image, siteURL).href;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />

		<!-- Primary Meta Tags -->
		<title>{title}</title>
		<meta name="title" content={title} />
		<meta name="description" content={description} />
		<meta
			name="keywords"
			content="Cía Díaz, singer, artist, Spanish music, live shows, concerts, Madrid concerts, Barcelona music, Valencia events, indie music, female artist, música española"
		/>
		<meta name="author" content="Cía Díaz" />
		<meta name="robots" content="index, follow" />
		<meta name="language" content="English" />
		<meta name="revisit-after" content="7 days" />

		<!-- Canonical URL -->
		<link rel="canonical" href={canonicalURL} />

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={canonicalURL} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={fullImageURL} />
		<meta property="og:image:width" content="1200" />
		<meta property="og:image:height" content="630" />
		<meta property="og:site_name" content="Cía Díaz" />
		<meta property="og:locale" content="en_US" />

		<!-- Twitter -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:url" content={canonicalURL} />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		<meta name="twitter:image" content={fullImageURL} />
		<meta name="twitter:creator" content="@cia_diaz_" />

		<!-- Viewport & Mobile -->
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="theme-color" content="#000" />
		<meta name="apple-mobile-web-app-capable" content="yes" />
		<meta
			name="apple-mobile-web-app-status-bar-style"
			content="black-translucent"
		/>
		<meta name="apple-mobile-web-app-title" content="Cía Díaz" />

		<!-- Favicons -->
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link
			rel="apple-touch-icon"
			sizes="180x180"
			href="/apple-touch-icon.png"
		/>

		<!-- Preconnect for Performance -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;0,700;1,400&display=swap"
			rel="stylesheet"
		/>

		<!-- Generator -->
		<meta name="generator" content={Astro.generator} />

		<!-- JSON-LD Structured Data -->
		<script
			type="application/ld+json"
			set:html={JSON.stringify({
				"@context": "https://schema.org",
				"@type": "MusicGroup",
				name: "Cía Díaz",
				alternateName: "Patricia Díaz",
				url: siteURL,
				image: fullImageURL,
				description: description,
				genre: ["Pop", "Indie", "Spanish Music"],
				sameAs: [
					"https://www.youtube.com/@patriciadiaz8943",
					"https://open.spotify.com/artist/0uUpImhCPw1wXuTgmNOUST",
					"https://www.instagram.com/cia_diaz_",
					"https://www.tiktok.com/@cia.diaz",
				],
				memberOf: {
					"@type": "MusicGroup",
					name: "Cía Díaz",
				},
			})}
		/>
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
	html {
		scroll-behavior: smooth;
	}

	html,
	body {
		margin: 0;
		width: 100%;
		height: 100vh;
		overflow: hidden;
		background-color: #000;
	}
</style>
